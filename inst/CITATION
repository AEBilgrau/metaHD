citHeader("Thanks for using the metaHD package!",
          "I have invested a lot of time and effort this package,",
          "so please cite it if you are using it. Thanks!")

citEntry(entry = "Manual",
         title = paste("metaHD: Fast, efficient, and robust high-dimensional",
                       "meta analysis"),
         author = personList(person(family="Bilgrau", 
                                    given="Anders", 
                                    middle="Ellern", 
                                    email="abilgrau@math.aau.dk")),
         url = "http://github.com/AEBilgrau/metaHD",
         year = "2014",
         textVersion = paste("Bilgrau, Anders Ellern; metaHD: Fast,",
                             "efficient, and robust high-dimensional meta",
                             "analysis;", 
                             "http://github.com/AEBilgrau/correlateR"))


citFooter("Suggestions for improvements, comments, and bug",
          "reports are very welcome at",
          "http://github.com/AEBilgrau/metaHD")
 
